<section class="containerforleftbar">
    {{>leftnavseller}}
    <section class="container-sellerAdd">
        <section class="container-1-sellerAdd">
            <h2>ADD PRODUCT</h2>
        </section>

        <section class="container-2-sellerAdd">
            <form action="/seller/add" method="POST" enctype="multipart/form-data">
                <input type="text" name="title" placeholder="Title">
                <br>
                <input type="text" name="description" placeholder="Description">
                <br>
                <input type="text" name="details" placeholder="Details">
                <br>
                <input list="category" name="category" placeholder="Category">
                <datalist id="category">
                    <option value="ElectrÃ³nica">
                    <option value="Celulares">
                    <option value="Videojuegos">
                    <option value="Farmacia">
                    <option value="Linea Blanca">
                    <option value="Ropa">
                    <option value="Muebles">
                    <option value="Vinos y Licores">
                    <option value="Seguros">
                </datalist>
                <br>
                <input type="number" name="unitPrice" placeholder="Unit Price">
                <br>
                <input type="number" name="minQuantity" min="" placeholder="Min Quantity">
                <br>
                <input type="number" name="maxQuantity" max="" placeholder="Max Quantity">
                <br>
                <div class="container-2-sellerAdd-a">
                    <div class="file-field input-field">
                        <div class="btn orange accent-4">
                            <i class="material-icons">photo_camera</i>
                            <span>IMAGE</span>
                            
                            <input name="picURL" type="file" accept="image/*">
                        </div>
                    </div>
                <br>
                <div class="waves-effect waves-light btn orange accent-4">
                    <i class="material-icons">add</i>
                    <input class="orange accent-4" type="submit" value="ADD PRODUCT">
                </div>
                <br>
                <div class="container-2-sellerAdd-b">
                    <a class="waves-effect waves-light btn orange accent-4" href="/seller/products"><i class="material-icons left">view_comfy</i>VIEW ALL PRODUCTS</a>
                </div>   
                </div>
                
            </form>
        </section>
    </section>
</section>
<section class="container-buyerDetail">
    <h2>Detail</h2>
    <section class="container-1-buyerDetail">  
        <p><strong>Product : </strong>{{title}}</p>
        <p><strong>Description : </strong>{{description}}</p>
        <p><strong>Detail : </strong>{{details}}</p>
        <p><strong>Category : </strong> {{category}}</p>
        <p><strong>Price : </strong> {{unitPrice}}</p>
        <img src={{picURL}} alt={{this.title}}/>

    </section>

    <section class="container-2-buyerDetail">
            <form action="/buyer/paypall" method="POST"> 
            <p><strong>Cuantas unidades quieres adquirir</strong></p>
            <input type="number" min={{minQuantity}} name="buyerQuantity" placeholder="Unidades">
            <br>
            <input type="submit" value="Pagar">
            </form>
    </section>

</section>
